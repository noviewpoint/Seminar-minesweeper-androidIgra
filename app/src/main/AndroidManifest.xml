<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.david.minolovec" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Minolovec"
            android:label="@string/title_activity_minolovec" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Rules"
            android:label="@string/rules_title"
            android:theme="@android:style/Theme.Dialog">
        </activity>

        <!-- configChanges="orientation|screenSize" - to omogoci spreminjanje med landscape in portrait brez restarta activitija-->
        <activity android:name=".Game"
            android:label="@string/title_activity_minolovec"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme">
        </activity>

        <activity android:name=".Lestvica"
            android:label="@string/title_activity_minolovec"
            android:theme="@style/AppTheme">
        </activity>

    </application>

</manifest>
